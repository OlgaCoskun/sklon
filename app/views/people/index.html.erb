<p id="notice"><%= notice %></p>

<table>
  <thead>
    <tr>
      <th>Имя</th>
      <th>Фамилия</th>
      <th>Отчество</th>
      <th>Пол</th>
      <th>ФИО в Родительном падеже</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.first_name %></td>
        <td><%= person.last_name %></td>
        <td><%= person.middle_name %></td>
        <td><%= person.gender %></td>
        <td><%= person.declension.genitive_lname %></td>
        <td><%= person.declension.genitive_fname %></td>
        <td><%= person.declension.genitive_mname %></td>
        <td><%= link_to 'Show', person %></td>
        <td><%= link_to 'Edit', edit_person_path(person) %></td>
        <td><%= link_to 'Destroy', person, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

